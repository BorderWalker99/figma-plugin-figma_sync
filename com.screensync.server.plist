<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.screensync.server</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>__NODE_PATH__</string>
        <string>__INSTALL_PATH__/start.js</string>
    </array>
    
    <key>WorkingDirectory</key>
    <string>__INSTALL_PATH__</string>
    
    <key>RunAtLoad</key>
    <true/>
    
    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
    </dict>
    
    <key>StandardOutPath</key>
    <string>__INSTALL_PATH__/server.log</string>
    
    <key>StandardErrorPath</key>
    <string>__INSTALL_PATH__/server-error.log</string>
    
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>
</dict>
</plist>

