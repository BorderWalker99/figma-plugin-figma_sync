{
  "name": "screensync-installer",
  "version": "1.0.1",
  "description": "ScreenSync GUI Installer",
  "author": "ScreenSync",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac"
  },
  "build": {
    "appId": "com.screensync.installer",
    "productName": "ScreenSync Installer",
    "compression": "maximum",
    "asar": true,
    "dmg": {
      "background": null,
      "backgroundColor": "#ffffff",
      "contents": [
        {
          "x": 270,
          "y": 190,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!src/*"
    ],
    "protocols": [
      {
        "name": "ScreenSync Protocol",
        "schemes": [
          "screensync"
        ]
      }
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^25.1.8"
  }
}

